<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/container"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:text="@string/math"
        android:id="@+id/math"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/select"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:text="@string/physics"
        android:id="@+id/physics"
        android:layout_below="@+id/math"
        android:layout_alignLeft="@+id/math"
        android:layout_alignStart="@+id/math"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:text="@string/marvel"
        android:id="@+id/marvel"
        android:layout_below="@+id/physics"
        android:layout_alignLeft="@+id/physics"
        android:layout_alignStart="@+id/physics"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Your Subject"
        android:id="@+id/select"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textSize="35dp"/>
</RelativeLayout>
