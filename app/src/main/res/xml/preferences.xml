<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="PreferenceCategory A">

        <EditTextPreference
            android:key="urlPref"
            android:title="URL"
            android:defaultValue="blank"
            android:summary="Download URL"
            android:dialogTitle="Enter desired URL"/>

        <EditTextPreference
            android:key="delayPref"
            android:title="Download Frequency (minutes)"
            android:defaultValue="10"
            android:inputType="number"
            android:summary="How often do you want to check for questions?"
            android:dialogTitle="Enter minutes to wait between downloads" />

    </PreferenceCategory>


</PreferenceScreen>